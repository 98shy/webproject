extends ../layout

block content
  .container
    h1.main-title Register
    form(action='/users', method='POST')
      .form-group
        label(for='email') 이메일
        input.form-control(type='email', id='email', name='email', placeholder='Email address')
      .form-group
        label(for='password') 비밀번호
        input.form-control(type='password', id='password', name='password', placeholder='Password')
      .form-group
        label(for='password_confirmation') 비밀번호 재확인
        input.form-control(type='password', id='password_confirmation', name='password_confirmation', placeholder='Password')
      .form-group
        label(for='name') 이름
        input.form-control(type='text', id='name', name='name', placeholder='Name')
      .form-group
        label(for='userType') 사용자 타입
        select.form-control(id='userType', name='userType')
          option(type='text', id='userType', value="일반 고객") 일반 고객
          option(type='text', id='userType', value="가이드") 가이드
          option(type='text', id='userType', value="관리자") 관리자
      button.btn.btn-primary(type='submit') 가입
