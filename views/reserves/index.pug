extends ../layout

block content
  .container
    h1.main-title Reserved Details
    
    table.table.table-hover
      thead
        tr
          th 여행상품 이름
          th 예약자 이름
          th 전화번호
          th 날짜
          th 인원
          th 총액
          th 예약 일시
          th
      tbody
        each reserve in reserves
          tr
            td= reserve.productname
            td= reserve.reserver
            td= reserve.phonenumber
            td= reserve.date
            td= reserve.count
            td= reserve.totalcost
            
            td= moment(reserve.reservedAt).format('YYYY-MM-DD HH:mm:ss')
            td
              a.btn.btn-sm.btn-outline-secondary(href=`/reserves/${reserve.id}/edit`) 
                | #[i.fa.fa-pencil] 수정
                | 
              a.btn.btn-sm.need-confirm-btn.btn-outline-danger(href=`/reserves/${reserve.id}?_method=DELETE`)
                | #[i.fa.fa-trash] 삭제
